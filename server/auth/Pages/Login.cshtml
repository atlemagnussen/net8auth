@page
@using net8auth.auth.Pages
@model LoginModel

<article>

    <header>
        <h1>Login</h1>
    </header>
    <form asp-route="Login">
        <input type="hidden" asp-for="Model.ReturnUrl" />

        <div class="form-group">
            <label asp-for="Model.Username"></label>
            <input class="form-control" placeholder="Username" asp-for="Model.Username" autofocus>
        </div>

        <div class="form-group">
            <label asp-for="Model.Password"></label>
            <input type="password" class="form-control" placeholder="Password" asp-for="Model.Password" autocomplete="off">
        </div>

        <div class="buttons">
            <div></div>
            <div class="row-space-between">
                <button class="primary" name="button" value="login">Login</button>
                <button name="button" value="cancel">Cancel</button>
            </div>
        </div>
    </form>

    <div class="error-messages">
        @foreach (var field in ModelState)
        {
            if (field.Value.Errors.Count > 0)
            {
                foreach (var error in field.Value.Errors)
                {
                    <p>@error.ErrorMessage</p>
                }
            }
        }
    </div>
</article>
